{
  "variables": {
  "aws_access_key": "{{env `aws_access_key`}}",
  "aws_secret_key": "{{env `aws_secret_key`}}",
  "aws_region":"",
  "subnet_id":"",
  "source_ami":"",
  "ssh_username": "",
  "ami_name":"",
  "ami_users":""
},
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "subnet_id": "{{user `vpc_public_sn_id`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "{{user `ami_name`}}_{{timestamp}}",
      "ami_description": "ami for assignment 4",
      "ami_users":"{{user `ami_users`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": "8",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_13.x | sudo -E bash - ",
        "sudo apt-get install -y nodejs",
        "sudo apt-get update",
        "sudo npm install -g http-server",
        "sudo npm install -g @angular/cli",
        "sudo apt-get update",
        "sudo apt-get -y install ruby",
        "sudo apt-get -y install wget",
        "cd /home/ubuntu",
        "wget https://aws-codedeploy-{{user `aws_region`}}.s3.{{user `aws_region`}}.amazonaws.com/latest/install",
        "chmod +x ./install",
        "sudo ./install auto",
        "wget com/amazoncloudwatch-agent/ubuntu/amd64/latest/amazon-cloudwatch-agent.deb",
        "sudo dpkg -i -E ./amazon-cloudwatch-agent.deb",
        "sudo systemctl enable amazon-cloudwatch-agent.service",
        "sudo systemctl start amazon-cloudwatch-agent.service"
        
      ]
    }
  ]
}